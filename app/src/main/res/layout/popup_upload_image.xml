<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popup_manager_ImageView"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/popup_manager_imageUpload"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_manager_ImageView"
        android:text="Upload"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:background="@drawable/round_corner"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/popup_manager_imageProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_manager_imageUpload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible"/>
</RelativeLayout>