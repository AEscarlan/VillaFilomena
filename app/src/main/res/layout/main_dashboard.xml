<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Manager.Main_Dashboard"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/manager_GuestHomePage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/manager_logo" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUEST HOMEPAGE"
                android:layout_gravity="bottom|center"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/manager_RoomCottage"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:background="@drawable/roomandcottage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROOM AND COTTAGE DETAILS"
                android:layout_gravity="bottom|center"
                android:textSize="22sp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/manager_PaymentHistory"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/paymenthstry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSACTION HISTORY"
                android:layout_gravity="bottom|center"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/manager_Frontdesk"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/frondeskclerk"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRONT DESK"
                android:layout_gravity="bottom|center"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/manager_salesReport"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/salesreport" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SALES REPORTS"
                android:layout_gravity="bottom|center"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/manager_employee"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/clerks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMPLOYEE"
                android:layout_gravity="bottom|center"
                android:textSize="24sp"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#0000"
            app:cardElevation="0dp">


            <ImageView
                android:id="@+id/manager_ratesFeedbacks"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/ratesfeedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATES AND FEEDBACKS"
                android:layout_gravity="bottom|center"
                android:textSize="24sp"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>