<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager.GuestHomePage_Dashboard"
    android:orientation="vertical"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#0000"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Home Page"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <ImageView
                android:id="@+id/manager_homeSave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:foreground="@drawable/ic_save"
                android:background="@drawable/border"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/manager_homeEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:foreground="@drawable/ic_edit"
                android:background="@drawable/border"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/manager_homeBanner"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/add_homeBanner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foreground="@drawable/ic_add"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add banner"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:background="@drawable/border"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/manager_homeIntro"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/add_homeIntro"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foreground="@drawable/ic_add"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add introduction"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:background="@drawable/border"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/add_homeVideo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foreground="@drawable/ic_add"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>