<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/arrival_guestList_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_guestname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_noPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of people"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="2.5"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rooms"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_balanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balanced"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:gravity="center"/>

        <TextView
            android:id="@+id/arrival_guestList_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_weight="0.5"
            android:gravity="center"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>