<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/roomInfo_RoomImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/villa_filomena_logo"
        android:gravity="center"/>

    <TextView
        android:id="@+id/roomInfo_RoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Room Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/roomInfo_RoomFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Room Fee"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/roomInfo_RoomCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Room Capacity"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"/>

</LinearLayout>